<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a New Comment <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form class="" action="/campgrounds/<%=campground._id%>/comments" method="POST">
			  <%# NAME FOR GRABBING THE DATA %>
			  <div class="form-group">
			  	 <input class="form-control" type="text" name="comment[text]" value="" placeholder="text">
			  </div>
			  <div class="form-group">
			  	 <input class="form-control" type="text" name="comment[author]" value="" placeholder="author">
			  </div>
			  <div class="form-group">
			  	 <!-- btn-block for getting all the space  -->
			 	 <button class="btn btn-lg btn-primary btn-block">Submit!</button>
			  </div>
			</form>
			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>
